source 'https://rubygems.org'
ruby "2.0.0"

gem 'rails', '4.0.0.rc1'

group :development do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'minitest-rails'
end

group :test do
  gem "minitest-rails-capybara"
end

gem 'sass-rails', '~> 4.0.0.rc1'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'

group :doc do
  gem 'sdoc', require: false
end
